<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/demo_logs_item_text_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        tools:text="Timestamp"
        android:layout_alignParentEnd="true"
        android:gravity="start"
        android:textAlignment="viewStart" />

    <LinearLayout
        android:id="@+id/demo_logs_item_layout_core"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/demo_logs_item_text_timestamp"
        android:orientation="vertical"
        android:layout_toStartOf="@id/demo_logs_item_text_timestamp"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/demo_logs_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            tools:text="Name"
            android:gravity="start"
            android:textAlignment="viewStart"
            />

        <TextView
            android:id="@+id/demo_logs_item_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:maxLines="1"
            tools:text="Device"
            android:gravity="start"
            android:textAlignment="viewStart"
            />

        <TextView
            android:id="@+id/demo_logs_item_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:maxLines="1"
            tools:text="Context"
            android:gravity="start"
            android:textAlignment="viewStart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/demo_logs_item_layout_core"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:layoutDirection="locale">

        <TextView
            android:id="@+id/demo_logs_item_text_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="11dp"
            android:textStyle="bold"
            tools:text="ACTION"
            />

        <TextView
            android:id="@+id/demo_logs_item_text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="11dp"
            android:textStyle="bold"
            tools:text="STATUS"
            />

        <TextView
            android:id="@+id/demo_logs_item_text_transactional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="11dp"
            android:textStyle="bold"
            tools:text="TRANSACTIONAL"
            />
    </LinearLayout>
</RelativeLayout>