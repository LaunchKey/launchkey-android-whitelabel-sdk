<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <Button
        android:id="@+id/demo_authorizations_item_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tools:text="Remove"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@id/demo_authorizations_item_button"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/demo_authorizations_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            tools:text="Name"
            android:gravity="start"
            android:textAlignment="viewStart"
            />

        <TextView
            android:id="@+id/demo_authorizations_item_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:maxLines="1"
            tools:text="Context"
            android:gravity="start"
            android:textAlignment="viewStart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/demo_authorizations_item_button"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/demo_authorizations_item_text_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="13dp"
            android:textStyle="bold"
            tools:text="ACTION"
            android:gravity="start"
            android:textAlignment="viewStart"
            />

        <TextView
            android:id="@+id/demo_authorizations_item_text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="11dp"
            android:textStyle="bold"
            tools:text="STATUS"
            android:gravity="start"
            android:textAlignment="viewStart"
            />

        <TextView
            android:id="@+id/demo_authorizations_item_text_transactional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="11dp"
            android:textStyle="bold"
            tools:text="TRANSACTIONAL"
            android:gravity="start"
            android:textAlignment="viewStart"
            />
    </LinearLayout>
</RelativeLayout>