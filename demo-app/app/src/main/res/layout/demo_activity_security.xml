<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_sec_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/sec_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/demo_toolbar_height"
        android:minHeight="@dimen/demo_toolbar_height"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/sec_security"
        android:name="com.launchkey.android.authenticator.sdk.ui.SecurityFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        />
</LinearLayout>