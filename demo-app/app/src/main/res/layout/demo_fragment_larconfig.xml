<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical"
        >

        <Switch
            android:id="@+id/lar_switch_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/black"
            android:text="@string/demo_fragment_larconfig_bycount_label"
            />

        <EditText
            android:id="@+id/lar_edit_count"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="@string/demo_fragment_larconfig_count_hint"
            android:gravity="start"
            android:textAlignment="viewStart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical"
        >

        <Switch
            android:id="@+id/lar_switch_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/black"
            android:text="@string/demo_fragment_larconfig_bytype_label"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="100dp"
        android:paddingStart="100dp">

        <Switch
            android:id="@+id/lar_switch_type_kno"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:switchPadding="10dp"
            android:text="@string/demo_activity_list_feature_security_info_knowledge"
            />

        <Switch
            android:id="@+id/lar_switch_type_inh"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/demo_activity_list_feature_security_info_inherence"
            android:switchPadding="10dp"
            />

        <Switch
            android:id="@+id/lar_switch_type_pos"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/demo_activity_list_feature_security_info_possession"
            android:switchPadding="10dp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/lar_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        android:hint="@string/demo_fragment_larconfig_title_hint"
        android:gravity="start"
        android:textAlignment="viewStart"
        />

    <EditText
        android:id="@+id/lar_edit_expiration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        android:hint="@string/demo_fragment_larconfig_lar_edit_hint"
        android:gravity="start"
        android:textAlignment="viewStart"
        />

    <Button
        android:id="@+id/lar_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/demo_fragment_larconfig_generate_request_button_text"
        />
</LinearLayout>