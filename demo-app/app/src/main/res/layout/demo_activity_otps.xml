<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/demo_activity_otps_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/demo_toolbar_height"
        android:minHeight="@dimen/demo_toolbar_height"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <fragment
        android:id="@+id/demo_activity_otps_fragment"
        android:name="com.launchkey.android.authenticator.sdk.ui.fragment.CodesFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        />
</LinearLayout>